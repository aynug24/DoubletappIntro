<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber" tools:layout_editor_absoluteY="141dp"
            tools:layout_editor_absoluteX="99dp"/>
    <Button
            android:text="Square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_square" tools:layout_editor_absoluteY="294dp"
            tools:layout_editor_absoluteX="151dp" android:onClick="squareClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>